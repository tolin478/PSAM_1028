    <script>

NovelLocationsArray = ["Ball","Grange","Heights","Garden","Cottage","Manor","Moors","Library","Drawing Room","Abbey"]
NovelAdjectivesArray = ["Wretched","Vivacious","Peculiar","Proverbial","Jubilant","Calamitious","Dismal","Brooding","Wicked","Iniquitous"];
NovelTimeArray = ["Dawn","Dusk","Afternoon","Midday","Midnight","Evening","Daylight","Nighttime","Eve","Daytime"]

var Location = NovelLocationsArray[Math.floor(Math.random() * NovelLocationsArray.length)];
var Adjective = NovelAdjectivesArray[Math.floor(Math.random() * NovelAdjectivesArray.length)];
var Time = NovelTimeArray[Math.floor(Math.random() * NovelTimeArray.length)];

var threeWords =  Adjective + " " + Location + " " + "at" + " " + Time;
var twoWords1 = Adjective + " " + Location;
var twoWords2 = Time + " " + Location;
twoWords3 = Adjective + " " + Time;

randomNameArray = [threeWords, twoWords1,twoWords2,twoWords3];
randomName = randomNameArray[Math.floor(Math.random() * randomNameArray.length)];

console.log(randomName);

